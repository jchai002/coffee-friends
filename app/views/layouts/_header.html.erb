<div class="row">
  <div class="large-12 columns">

  <nav class="top-bar" data-topbar>
    <ul class="title-area">

      <li class="name">
        <h1><%= link_to "CoffeeMates", root_path %></h1>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#"><span>menu</span></a></li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
        <% if user_logged_in? %>
        <li><%= link_to "#{current_user.first_name}'s Profile", profile_path %></li>
        <li><%= link_to "Log Out", logout_path, method: :delete %></li>
        <% elsif cafe_logged_in? %>
        <li><%= link_to "#{current_cafe.name}'s Profile", cafes_profile_path %></li>
        <li><%= link_to "Log Out", cafes_logout_path, method: :delete %></li>
        <% else %>
        <%= link_to "Register", "#register-modal", class: "button", id: "register-modal-trigger", rel:"leanModal" %>
        <%= link_to "Log In", "#login-modal", class: "button", id:"login-modal-trigger", rel:"leanModal" %>
        <% end %>
      </ul>
    </section>
  </nav> 

