<h1>Log in</h1>

<%= form_for(:user_session, url: users_sessions_path) do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email, value: @user.email%>
  <%= flash[:auth_error] %>

  <%= f.label :password %>
  <%= f.password_field :password%>
  <%= flash[:password_error] %>

  <%= f.submit "Log in" %>
<% end %>

<p>New user? <%= link_to "Register now!", register_path %></p>


