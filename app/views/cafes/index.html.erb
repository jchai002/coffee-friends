<div class="row">
  <div class='show-for-medium-up medium-12 columns'>
  <ul class="example-orbit" data-orbit>
    <li>
      <%= image_tag "cafe.jpg", class:"banner"%>
      <div class="orbit-caption">
        Step 1. Choose a Cafe
      </div>
    </li>
    <li class="active">
      <%= image_tag "coffee.jpg", class:"banner"%>
      <div class="orbit-caption">
       Step 2. Buy a cup of coffee for a friend
      </div>
    </li>
    <li>
      <%= image_tag "barista.jpg", class:"banner"%>
      <div class="orbit-caption">
        Step 3. Your friend gets to pick up the coffee from the cafe :)
      </div>
    </li>
  </ul>
  </div>
</div>

<div class='row'>
  <div class='small-12 columns'>
    <h1>All Cafes</h1>
  </div>
</div>

<div class='row'>
  <%= search_form_for @q do |f| %>
  <div class="small-12 medium-10 columns">
    <%= f.search_field :name_cont, :placeholder => 'Cafe Name' %>
  </div>
  <div class="small-12 medium-2 columns">
    <%= f.submit 'search', :class => 'button tiny round' %>
  </div>
  <% end %>
</div>

<div class='row'>
  <ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-3">
    <% @cafes.each do |cafe| %>
    <li><figure>
      <%= link_to image_tag("http://i.dailymail.co.uk/i/pix/2014/08/05/1407225932091_wps_6_SANTA_MONICA_CA_AUGUST_04.jpg"), cafe %>
      <figcaption>
        <h4><%= cafe.name %></h4>
        <span><%= cafe.address %></span>
        <br>
        <%= link_to 'select this cafe', cafe %>
      </figcaption>
    </figure></li>
    <%end%>
  </ul>
</div>

