<div class="search">
  <%= form_tag(@cafe, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Redemption Codes" %>
  <%= submit_tag "Search" %>
  <% end %>
</div>

<div class="row">
  <div class="small-12 medium-9 medium-centered large-6 large-centered columns">
    <hr>

    <ul class="accordion" data-accordion>
  <li class="accordion-navigation">
    <a href="#charitable">Charitable Gifts(<%=@charitable_gifts.count%>)</a>
    <div id="charitable" class="content active">
      <%= render @charitable_gifts %>
    </div>
  </li>
</ul>

    <h3 class="subheader">Redeemed Gift Count: <%= @cafe.redeemed_coffee_gifts.count %></h3>

    <h3 class="subheader">Unredeemed Gifts</h3>
    <ul>
      <% @unredeemed_coffee_gifts.each do |gift| %>
      <li>
        <% if gift.receiver %>
        <%= form_for gift do |f| %>
        <%= f.submit "redeem" %>
        <% end%>
        <b>Receiver</b>:<%= gift.receiver.username %>...
        <% else%>
        <b>Receiver</b>:<%= gift.phone %>(unregistered user)
        <%end%>
        Drink: <%=gift.name %>...<b>Secret Redemption Code</b>: <%= gift.redemption_code %></li>
        <%end%>
      </ul>

      <hr>

    </div>
  </div>
