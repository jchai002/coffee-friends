<div id="register-modal" class="popupContainer">
  <header class="popupHeader">

    <h3 class="header_title">Register</h3>
    <div class="modal_close"><%= image_tag("grey-close.png") %></div>
  </header>

  <div id="registration-errors" class="popupErrors">
    <% if flash[:reg_error] %>
      <% flash[:reg_error].each do |error| %>
        <p><%=error%></p>
      <% end %>
    <% end %>
  </div>  

  <section class="popupBody user-register">
    <%= form_for :user, url: users_path do |f| %>
    <%= f.text_field :first_name, placeholder: "First Name", label: false%>
    <%= f.text_field :last_name, placeholder: "Last Name", label: false%>
    <%= f.email_field :email, placeholder: "Email", label: false%>
    <%= f.telephone_field :phone, placeholder: "Phone", maxlength: "10", label: false %>
    <%= f.password_field :password, placeholder: "Password", label: false%>
    <%= f.submit :Register, :class=>"button tiny" %>
  <% end %>

    </section>
</div>
