<%= form_for menu_item, url: cafe_menu_item_path(@cafe, menu_item) do |f| %>
<%= hidden_field_tag "_method", "put" %>
<%= f.label :name %>
<%= f.text_field :name, value: menu_item.name %>
<%= f.label :price %>
<%= f.text_field :price, value: menu_item.price %>
<%= f.submit "Update item" %>
<% end %>